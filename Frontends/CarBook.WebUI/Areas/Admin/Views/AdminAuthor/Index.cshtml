@model List<ResultAuthorDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazarlar Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Yazarlarla ilgili yeni Yazar ekleme ,
                            yazarlar listesi, yazarlar üzerinde düzenleme ve bir yazarı kaldırma işlemlerini
                            buradan gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row" class="justify-content-center">@count</th>
                                            <td><img src="@item.ImageUrl" width="75" height="75" class="mr-5"/>@item.Name</td>
                                            <td>
                                                <a href="/Admin/AdminAuthor/RemoveAuthor/@item.ID"
                                                   class="btn btn-outline-danger">Sil</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminAuthor/UpdateAuthor/@item.ID"
                                                   class="btn btn-outline-success">Güncelle</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminAuthor/UpdateAuthor/@item.ID"
                                                   class="btn btn-outline-dark">Yazarın Blogları</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-primary">Yeni Yazar Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


