@* @model CreateCommentDto
 *@
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum yapın</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">
        <input name="BlogID" value="@ViewBag.blogId" hidden />
        <div class="form-group">
            <label for="name">Adınız *</label>
            <input type="text" name="Name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="text">Email</label>
            <input type="text" name="Mail" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Mesajınız *</label>
            <textarea name="Content" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorumu Paylaş" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>